                            this.stroke('black');
                            this.strokeWidth(1);
                            layer.draw();
                        });

                        btnCancelarSel.on('click', function () {
                            SaveSeleccion(false);
                        });

                        layer.add(btnCancelarSel);

                        var btnCancelText = new Konva.Text({
