                                        ElementoNuevo[xElement] = new Konva.Rect({
                                            x: parseInt(elemento[1], 10),
                                            y: parseInt(elemento[2], 10),
                                            width: parseInt(elemento[3], 10),
                                            height: parseInt(elemento[4], 10),
