                            traditional: true,
                            async: false,
                            cache: false,
                            url: '/Salon/CargarSalon',
                            dataType: "json",
                            contentType: "application/json",
                            success: function (Mesas) {
                                Mesas.forEach(function (elemento, indice, array) {
                                    if (indice > 0) {

