                            i++;
                        });

                        var xParametros = '{ MesasValues: [' + chkarray + '] }';

                        $.ajax({
                            type: "POST",
                            traditional: true,
                            async: false,
                            cache: false,
                            url: '/Salon/GuardaSalon',
                            data: xParametros,
                            dataType: "json",
                            contentType: "application/json",
                            success: function (algo) {
                                alert(algo);
                            },
