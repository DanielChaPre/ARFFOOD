                    LayoutObj = new Image();
                    LayoutObj.onload = function () {
                        LayoutIMG.image(LayoutObj);
                        layer.draw();
                    };
                    LayoutObj.src = '/IMG/Salon/Salon1.jpg';

                    LayerGroup = new Konva.Group({
