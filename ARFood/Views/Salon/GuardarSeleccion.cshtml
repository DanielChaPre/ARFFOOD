                            fill: 'white'
                        });

                        btnLoadText.on('click', function () {
                            LoadValues();
                        });

                        layer.add(btnLoadText);
                    }



                  // add the layer to the stage
                    stage.add(layer);


                    var ElementoImg = [];

                    var ElementoNuevo = [];
                    var Elementotext = [];

                    var ElementArray = [];

                    var ctext = [];

                    var imageObj3 = [];

                    LayoutIMG = new Konva.Image({
