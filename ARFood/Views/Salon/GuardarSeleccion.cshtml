                        layer.add(btnAddBack);

                        var btnAddText = new Konva.Text({
                            x: 20,
                            y: 310,
                            text: "Agregar mesa a Layout",
                            align: "center",
                            fontSize: 15,
                            fontFamily: 'Calibri',
                            fill: 'white'
                        });

                        btnAddText.on('click', function () {
                            NewElemento();
                        });

                        layer.add(btnAddText);


                        var btnSave = new Konva.Rect({
                            x: 10,
                            y: 500,
                            width: 170,
                            height: 50,
                            fill: 'blue',
                            stroke: 'black',
                            strokeWidth: 4,
                            cornerRadius: [0, 5, 10, 15],
