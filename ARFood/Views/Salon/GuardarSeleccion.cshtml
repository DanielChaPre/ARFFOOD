                            fontFamily: 'Calibri',
                            fill: 'white'
                        });

                        btnSeleccionarText.on('click', function () {
                            NewElemento();
                        });

                        layer.add(btnSeleccionarText);


                        var btnCancelarSel = new Konva.Rect({
                            x: 10,
